function object2file($value, $filename)
{
    
    $f = fopen($filename, 'a+');
	for($i=0; $i < 8; $i++) {
		fwrite($f, $value[$i] . "\n");
	} 
    fclose($f);
}fwrite($f, "\n\n");
    $data   =   $_POST["result"];
